<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              android:background="@color/background"
              tools:context="com.ivankocijan.workshop_2.activity.ListViewEgActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">


        <Button android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:id="@+id/add_new_item_to_list"
                android:text="Add new item"/>

        <Button android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:id="@+id/remoce_item_from_list"
                android:text="Remove last item"/>

    </LinearLayout>


    <TextView
        android:id="@+id/simple_list_empty_view"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="List is empty"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/simple_list"
        android:text="@string/hello_world"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
